<p id="notice"><%= notice %></p>

<h1><%= t :companies %></h1>

<table>
  <thead>
    <tr>
      <th><%= t :c_name %></th>
      <th><%= t :c_address %></th>
      <th><%= t :c_representative_name %></th>
      <th><%= t :c_representative_role %></th>
      <th><%= t :c_foundation %></th>
      <th><%= t :c_vietnam_representative %></th>
      <th><%= t :c_business_content %></th>
      <th><%= t :c_code_language %></th>
      <th><%= t :c_work_time %></th>
      <th><%= t :c_work_hour %></th>
      <th><%= t :c_appeal %></th>
      <th><%= t :c_other %></th>
      <th><%= t :picture %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td><%= company.representative_name %></td>
        <td><%= company.representative_role %></td>
        <td><%= company.foundation %></td>
        <td><%= company.vietnam_representative %></td>
        <td><%= company.business_content %></td>
        <td><%= company.code_language %></td>
        <td><%= company.work_time %></td>
        <td><%= company.work_hour %></td>
        <td><%= company.appeal %></td>
        <td><%= company.other %></td>
        <td><%= company.picture %></td>
        <td><%= link_to I18n.t(:show), company %></td>
        <td><%= link_to I18n.t(:edit), edit_company_path(company) %></td>
        <td><%= link_to I18n.t(:destroy), company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t(:create_company), new_company_path %>
<div style="min-height: 500px;">
  
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% if !@companies.blank? %>
          <% @companies.each do |company| %>
            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <div class="logo">
                  <%= image_tag(company.picture.url,class:"img-thumbnail float comment-image") if company.picture? %>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                              <a href="<%= "/companies/#{company.id}" %>" class="btn btn-sm btn-outline-secondary"> View </a>  
                        </div>
                        <div>
                            <img src="/images/5star.png" style="width:100px;height:30px;">
                        </div>
                    </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          No companies found.
        <% end %>
      </div>
    </div>
  </div>
</div>
