<div class="container" style="padding-top:50px">
    <div class="card">
        <div class="card-header">
                <h3><%= t :u_profile %></h3>
        </div>
        <div class="card-body">
            <div class="row"> 
                <div class="col-3">
                    <% if @user.picture.presence %>
                        <%= image_tag(@user.picture.thumb.url, class: "rounded-circle mx-auto d-block", alt: "image", width: "150px", height: "150px") %>
                    <% else %>
                        <img src="http://www.personalbrandingblog.com/wp-content/uploads/2017/08/blank-profile-picture-973460_640-300x300.png"
                            class="rounded-circle mx-auto d-block" alt="image" width="150px" height="150px">
                    <% end %>
                </div>
                <div class="col-9">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <td><%= t :u_email %></td>
                                <td><%= @user.email %></td>
                            </tr>
                            <tr>
                                <td><%= t :u_name %></td>
                                <td><%= @user.name %></td>
                            </tr>
                            <tr>
                                <td><%= t :u_school %></td>
                                <td><%= @user.school %></td>
                            </tr>

                            <tr>
                                <td><%= t :u_school_year %></td>
                                <td> <%= @user.school_year %></td>
                            </tr>
                            <tr>
                                <td><%= t :u_gender %></td>
                                <td>
                                <% if @user.gender == 0 %>
                                    <%= t :u_gender_male %>
                                <% else %>
                                    <%= t :u_gender_female %>
                                <% end %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    
                    <%= button_to edit_user_path, class: "btn btn-light float-right", method: :get do%>
                        <i class="fa fa-edit fa-1x"></i>
                    <% end %>
                </div>

            </div>

        </div>
    </div>
</div>