<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <title>Hedspi家族</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU"
    crossorigin="anonymous">
    <!-- Custom styles for this template -->
  </head>

  <body>
   <header>
      <div class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container d-flex justify-content-between">
          <a href="/" class="navbar-brand d-flex align-items-center">
            <!-- <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2"><path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path><circle cx="12" cy="13" r="4"></circle></svg> -->
            <strong>Hedspi家族</strong>
          </a>
          <ul class="nav justify-content-end">
            <li class="nav-item">
            <%= search_form_for @q, :url => search_companies_path, :html => {:method => :post}  do |f| %>
              <div class="input-group">
                <%= f.text_field :name_cont, placeholder: I18n.t(:h_companyname), class:"form-control" %>
                <div class="input-group-append">
                  <input type="submit" name="commit" value="Search" class="btn btn-outline-secondary text-white" data-disable-with="Search">
                </div>
              </div>
            <% end %>
            </li>           
            <% if !user_signed_in? %>
              <li class="nav-item">
                <a class="nav-link text-white" href="/users/sign_up"><%= t :h_signup %></a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-white" href="/users/sign_in"><%= t :h_login %></a>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to I18n.t(:u_profile), current_user, class: "nav-link text-white" %>
              </li>
              <li class="nav-item">
                <%= link_to I18n.t(:h_logout), destroy_user_session_path, method: :delete, class: "nav-link text-white" %>
              </li>
            <% end %>
            <li class="nav-item">
                <a class="nav-link text-white"><%= link_to I18n.t(:en), locale:"en" %></a>
            </li>
            <li class="nav-item">
               <a class="nav-link text-white"><%= link_to I18n.t(:vi), locale:"vi" %></a>
            </li>
          </ul>
          
        </div>
      </div>

     <% if !flash.empty? %>
      <div id = "myModal" class="modal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div id="flash">
            <% flash.keys.each do |k| %>
              <div class="<%= k %>">
                <%= flash[k] %>
              </div>
            <% end %>
            </div>
          </div>
          </div>
        /div>
      </div>
    <% end %>

    </header>
    
    <%= yield %>
    <footer class="footer">
        <div class="container">
          <p class="float-right">
            <a href="#"><%= t :back_to_top%></a>
          </p>
          <p>IT Nihongo 3 Project - Campboot team</p>
        </div>
    </footer>


    <!-- Placed at the end of the document so the pages load faster -->
    <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script>
      $('#myModal').modal('show');
    </script>
  </body>
</html>